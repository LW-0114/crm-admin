@model CrmAdmin.Web.Controllers.AccountController.LoginViewModel
@{
    Layout = "_Layout";
}

<h3>Login</h3>

@if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
{
    <p><mark>Login failed. Please check your details.</mark></p>
}

<form asp-action="Login" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ReturnUrl" />

    <label>
        Username
        <input asp-for="Username" autocomplete="username" />
    </label>

    <label>
        Password
        <input asp-for="Password" type="password" autocomplete="current-password" />
    </label>

    <label>
        <input asp-for="RememberMe" type="checkbox" />
        Remember me
    </label>

    <button type="submit">Sign in</button>
</form>

<p>
    <small>For dev: use a username from <code>MockMaximizerUsers</code> and password <code>Passw0rd!</code>.</small>
</p>
